    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/mezza_tests/build/mezza_tests.exec",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/mezza_tests/build",
            //"environment": [{"name":"LD_LIBRARY_PATH","value":"${workspaceFolder}/../sqlite3/build"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Tests"
        }
    ]
}