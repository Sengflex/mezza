{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Static Library - Release",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "stclib-release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Static Library - Debug",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "stclib-debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Static Library - Clean",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "clean"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}